.my-box {
    padding: 20px;
}

.my-box .user-info {
    display: flex;
}

.my-box .user-info .text {
    margin-left: 20px;
}

.my-box .user-info .text .name {
    display: block;
    margin-top: 20px;
    font-size: 18px;
    font-weight: bold;
}

.my-box .user-info .text .phone {
    display: block;
    margin-top: 5px;
    font-size: 15px;
}

.my-box .item-box {
    margin-top: 12px;
    padding: 15px;
    background: #ffffff;
    border-radius: 5px;
}

.my-box .item-box .title {
    font-size: 15px;
    color: #222;
    font-weight: bold;
}
.userAvatarImage { border-radius: 10px; border:2px solid #888; 
    width:70px; 
    height:70px; 
    display: block; margin:0 auto; text-align: center;}

.my-box .item-box .item-list {
    margin-top: 15px;
    display: flex;
}

.my-box .item-box .item-list .item {
    width: 25%;
}

.my-box .item-box .item-list .item .link {
    display: block;
    margin: 0 auto;
    width: 70px;
    height: 70px;
    text-align: center;
    color: #222;
    font-size: 13px;
}

.my-box .item-box .item-list .item .icon {
    display: block;
    font-size: 30px;
}
