.pay-box {
    padding: 20px;
}

.pay-box .address-box {
    position: relative;
    padding: 15px 50px 15px 15px;
    background: #fff;
    border-radius: 5px;
}

.pay-box .address-box .name {
    font-size: 15px;
}

.pay-box .address-box .phone {
    margin-left: 10px;
    font-size: 12px;
    color: #666;
}

.pay-box .address-box .addr {
    margin-top: 5px;
    font-size: 12px;
}

.pay-box .address-box .icon2 {
    position: absolute;
    right: 10px;
    top: 50%;
    margin-top: -12.5px;
    font-size: 25px;
    color: #666;
}

.pay-box .list {
    border-radius: 5px;
}

.pay-box .list .item .van-card {
    background: #fff;
}

.pay-box .list .item+.item .van-card {
    border-top: 1px dashed #ddd;
}
.btnAddNewShip { padding:0 20px;}